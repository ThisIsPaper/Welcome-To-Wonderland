@inherits UmbracoViewPage<Login>
@{
    Layout = "SitePage.cshtml";
}


<div class="page-bg">

    <div class="container gutter">

        <div class="wgrid-main centered">

            <div class="boxx pad-large" m-radius-picker>

                <h1 class="bigger">@Model.PageHeading</h1>

                <hr/>

                <div class="grid-8 grid-mobile-12 parent centered margin-top-3 margin-bottom-3">
                    <div m-facebook-login-button label="'Login with Facebook'" m-anti-forgery-token="@GetAntiForgeryToken()" login-url="@(Url.GetUmbracoApiService<FacebookApiController>("Login"))"></div>
                </div>

                <hr/>

                <h4>Or by email</h4>

                @(Html.Action<LoginSurfaceController>("RenderLoginForm"))

            </div>

        </div>

    </div>

</div>