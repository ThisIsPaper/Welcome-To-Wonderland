@model RegisterHostPartyKitForm

@using (Html.BeginUmbracoForm<RegisterHostSurfaceController>("HandleRegisterHostPartyKitForm", FormMethod.Post, new { ng_submit="processing=true" }))
{

    <div class="grid-8 grid-mobile-12 margin-bottom-large parent">

        @Html.AntiForgeryToken()

        <h4>Your name</h4>

        <label for="FirstName">First name</label>
        @Html.TextBoxFor(x => x.FirstName, new { @m_radius_picker="small", @ng_readonly="processing", @ng_class="{'error': errorFirstNameMessage.length>0}" })
        <div class="margin-bottom-small" ng-show="errorFirstNameMessage.length>0" ng-init="errorFirstNameMessage='@Html.ValidationMessageFor(x => x.FirstName)'">@Html.ValidationMessageFor(x => x.FirstName)</div>

        <label for="LastName">Last name</label>
        @Html.TextBoxFor(x => x.LastName, new { @m_radius_picker="small", @ng_readonly="processing", @ng_class="{'error': errorLastNameMessage.length>0}" })
        <div class="margin-bottom-small" ng-show="errorLastNameMessage.length>0" ng-init="errorLastNameMessage='@Html.ValidationMessageFor(x => x.LastName)'">@Html.ValidationMessageFor(x => x.LastName)</div>
    </div>

    <div class="grid-12 parent margin-bottom-large">

        <hr/>

        <h4>Your address</h4>

        <div class="grid-8 grid-tablet-12 parent">
            <label for="Postcode2">Postcode</label>
            <input type="text" class="margin-bottom-small" name="Postcode2" ng-model="partyKitAddressData.Postcode" m-radius-picker="small" on-key-enter-trigger="pafAddressFinderPostcodeSearchPartyKit"/>
            <div m-address-finder="{{ partyKitAddressData.Postcode }}" m-address="partyKitAddressData" m-trigger-event="pafAddressFinderPostcodeSearchPartyKit"></div>
        </div>
        <div class="clear"></div>
        <hr/>
    </div>

    <div class="grid-8 grid-mobile-12 margin-bottom-large parent">

        <label for="Address1">Address 1</label>
        @Html.TextBoxFor(x => x.Address1, new { @m_radius_picker="small", @ng_model="partyKitAddressData.Address1", @m_value_matcher="", @ng_readonly="processing", @ng_class="{'error': errorAddress1Message.length>0}" })
        <div class="margin-bottom-small" ng-show="errorAddress1Message.length>0" ng-init="errorAddress1Message='@Html.ValidationMessageFor(x => x.Address1)'">@Html.ValidationMessageFor(x => x.Address1)</div>

        <label for="Address2">Address 2</label>
        @Html.TextBoxFor(x => x.Address2, new { @m_radius_picker="small", @ng_model="partyKitAddressData.Address2", @m_value_matcher="", @ng_readonly="processing", @ng_class="{'error': errorAddress2Message.length>0}" })
        <div class="margin-bottom-small" ng-show="errorAddress2Message.length>0" ng-init="errorAddress2Message='@Html.ValidationMessageFor(x => x.Address2)'">@Html.ValidationMessageFor(x => x.Address2)</div>

        <label for="TownCity">Town/City</label>
        @Html.TextBoxFor(x => x.TownCity, new { @m_radius_picker="small", @ng_model="partyKitAddressData.TownCity", @m_value_matcher="", @ng_readonly="processing", @ng_class="{'error': errorTownCityMessage.length>0}" })
        <div class="margin-bottom-small" ng-show="errorTownCityMessage.length>0" ng-init="errorTownCityMessage='@Html.ValidationMessageFor(x => x.TownCity)'">@Html.ValidationMessageFor(x => x.TownCity)</div>

        <label for="PostCode">Postcode</label>
        @Html.TextBoxFor(x => x.PostCode, new { @m_radius_picker="small", @ng_model="partyKitAddressData.Postcode", @m_value_matcher="", @ng_readonly="processing", @ng_class="{'error': errorPostCodeMessage.length>0}" })
        <div class="margin-bottom-small" ng-show="errorPostCodeMessage.length>0" ng-init="errorPostCodeMessage='@Html.ValidationMessageFor(x => x.PostCode)'">@Html.ValidationMessageFor(x => x.PostCode)</div>

    </div>

    <div class="grid-8 grid-mobile-12 margin-bottom-large parent">
        <h4>T-Shirt Size</h4>
        <p>Here at Wonderland we love prizes. We've created some great rewards for you, from sunglasses to hip and happening t-shirts. Add your t-shirt size here and we'll send you a top secret t-shirt shaped prize when you raise £250 :)</p>

        @foreach(string tShirtSize in this.ViewBag.TShirtSizes)
        {
            <label class="dis-block">
                @Html.RadioButtonFor(x => x.TShirtSize, tShirtSize) @tShirtSize
            </label>
        }
    </div>


    <div class="grid-12 pad-0">
        <hr/>
        <button type="submit" class="btn-primary float-right width-mobile-100p float-mobile-left" m-radius-picker="small" ng-disabled="processing">Register <span class="icon-icon_chevron_right"></span></button>
        <div class="loader pos-mobile-static float-mobile-left" ng-show="processing"></div>
    </div>

}