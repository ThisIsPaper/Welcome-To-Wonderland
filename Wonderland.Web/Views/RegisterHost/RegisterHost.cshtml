@inherits UmbracoViewPage<RegisterHost>
@{
    Layout = "~/Views/SitePage.cshtml";
}


<div class="page-bg">

    <div class="container gutter">

        <div class="wgrid-main centered">

            <div class="boxx" m-radius-picker>

                <h1><span class="bigger">Register</span></h1>

                <hr/>


                <div class="grid-8 grid-mobile-12 parent centered margin-top-3 margin-bottom-3">
                    <div m-facebook-login-button label="'Register with Facebook'" m-anti-forgery-token="@GetAntiForgeryToken()" login-url="@(Url.GetUmbracoApiService<FacebookApiController>("RegisterHost"))"></div>
                </div>

                <hr/>

                <h3>Or by email</h3>

                @(Html.Action<RegisterHostSurfaceController>("RenderRegisterHostForm"))

            </div>

        </div>

    </div>

</div>