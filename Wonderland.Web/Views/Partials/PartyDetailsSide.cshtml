
<div class="wgrid-full wgrid-no-bottom-margin parent">
    <div class="wgrid-full wgrid-no-bottom-margin parent" ng-init="partyImageSideImageUrl='@{if (Model.PartyHost.PartyImage != null) {<text>@Model.PartyHost.PartyImage.Url</text>}}'">
        <img ng-src="{{ partyImageSideImageUrl }}" width="100%"/>
        <div class="no-party-image" ng-show="partyImageSideImageUrl.length<=0" ng-cloak></div>
        <div class="boxx-twerk"></div>
    </div>

</div>


<div class="wgrid-full pad-large">

    <div m-profile-image="{{ '@Model.PartyHost.ProfileImageUrl' }}" m-radius-picker="small"></div>
    <div class="party-details">
        <h3 class="top pad-right-3 margin-bottom-4 margin-mobile-bottom-0 min-height-4">@Model.PartyHost.PartyHeading</h3>

        <div class="anti-image-shift-details body-medium">
            <hr class="hide-on-tablet"/>
            <div class="dis-inline-block margin-right-medium">
                <span class="icon-icon_clock"></span>
                <span ng-bind="partyDateTime|datePreviewFormat" ng-init="partyDateTime='@Model.PartyHost.PartyDateTime'"></span>
            </div>
            <div class="dis-inline-block">
                <span class="icon-icon_fingerpost"></span>
                <span ng-bind="'@Model.PartyHost.PartyAddress.TownCity'|addressJoiner:':~:'"></span>
            </div>
        </div>

    </div>
</div>