@inherits UmbracoViewPage<SiteSettings> 
<header id="siteHeader">
    <nav class="nav">
        @if (!this.Members.IsLoggedIn())
        {
            @Html.ActionLink("Host a party >", "NavigateToRegisterHostUrl", "RegisterHostSurface", null, new { @class = "btn-secondary" })
        }
        else
        {
            <a href="@(((IPartier)this.Members.GetCurrentMember()).PartyUrl)" class="btn-primary">My party</a>
        }
	    
	    <ul class="toolbar">
	        @foreach (SitePage sitePage in Model.HeaderNavigation)
	        {
	            <li><a href="@sitePage.Url">@sitePage.Name</a></li>
	        }
	    </ul>
	    <a href="/" class="wonderland-logo-bg">
            <span class="wonderland-logo"></span> 
            <p>
                Wonderland Home
            </p>
        </a>

        @if (!this.Members.IsLoggedIn())
        {            
            @Html.ActionLink("Login", "NavigateToLoginUrl", "LoginSurface", null, new { @class = "btn-secondary" })
        }
        else
        {
            <ul>
                <li>
                    @Html.ActionLink("Logout", "Logout", "LogoutSurface")
                </li>
            </ul>
        }

    </nav>
	<div class="snow-brush-overlay"></div>
</header>
