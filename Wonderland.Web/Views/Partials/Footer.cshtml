@inherits UmbracoViewPage<SiteSettings>
<footer>
    <div class="snow-brush-overlay"></div>
    <div id="placeholder"></div>
    <section class="footer-primary">
        <nav>
            <ul>
            @foreach (SitePage sitePage in Model.FooterNavigation)
            {
              <li><a href="@sitePage.Url">@sitePage.Name</a></li>
            }
            </ul>
        </nav>
        <div class="share-container">
            <ul>
                <li><a href="@Model.FacebookUrl">Facebook</a></li>
                <li><a href="@Model.TwitterUrl">Twitter</a></li>
                <li><a href="@Model.GooglePlusUrl">Google+</a></li>
            </ul>
            <p>
                @Model.CampaignHashtag
            </p>
        </div>
    </section>
    <section class="footer-secondary">
        <div class="legal-copy">
            @Model.FooterCopy
        </div>
        <nav>
            <ul>
              @foreach (SitePage sitePage in Model.LegalNavigation)
              {
                <li><a href="@sitePage.Url">@sitePage.Name</a></li>
              }
            </ul>
        </nav>
    </section>
</footer>