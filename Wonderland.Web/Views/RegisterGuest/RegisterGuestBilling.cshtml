@inherits UmbracoViewPage<RegisterGuest>
@{
    Layout = "~/Views/SitePage.cshtml";
}




<div class="page-bg" ng-init="guideDonationSuggestions = [
        { amount: 10, label: '@if(Model.PartyHost.SuggestedDonation == 10){ @Html.Raw(@Model.PartyHost.FirstName + "\\'s suggested amount"); }' },
        { amount: 15, label: '@if(Model.PartyHost.SuggestedDonation == 15){ @Html.Raw(@Model.PartyHost.FirstName + "\\'s suggested amount"); }' },
        { amount: 20, label: '@if(Model.PartyHost.SuggestedDonation == 20){ @Html.Raw(@Model.PartyHost.FirstName + "\\'s suggested amount"); }' },
        { amount: 25, label: '@if(Model.PartyHost.SuggestedDonation == 25){ @Html.Raw(@Model.PartyHost.FirstName + "\\'s suggested amount"); }' }
    ];">





    <div class="container gutter">

        <div class="wgrid-main wgrid-no-bottom-margin">

            <div class="boxx radius-bottom-0" m-radius-picker="large">

                <h1><span class="bigger">Join <br/></span><span>the Party</span></h1>

            </div>

        </div>


        <div class="wgrid-side parent wgrid-no-bottom-margin">

            <div class="boxx collapse radius-tablet-0" m-radius-picker="medium">

                @Html.Partial("PartyDetailsSide")

            </div>

        </div>



        <div class="wgrid-main">

            <div class="boxx radius-top-0" m-radius-picker>

                <hr/>

                @(Html.Action<RegisterGuestSurfaceController>("RenderRegisterGuestBillingForm"))

            </div>

        </div>


    </div>

</div>