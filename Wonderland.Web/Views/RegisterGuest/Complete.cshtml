@inherits UmbracoViewPage<RegisterGuest>
@{
    Layout = "~/Views/SitePage.cshtml";
}


<div class="page-bg">

    <div class="container gutter">

        <div class="wgrid-main">

            <div class="boxx" m-radius-picker>

                <h1><span class="lighter"><span class="icon-icon_tick margin-right-medium"></span><span class="bigger">You've </span></span><br/><span>joined the party!</span></h1>

                <h3>You're going to: @Model.PartyHost.PartyHeading</h3>
                <p>Thank you message goes here. Review your order details, then go join the conversation  on the <a href="@Model.PartyHost.PartyUrl" class="body-highlight">party page wall</a>.</p>

                <hr/>

                <h4>Order details</h4>

                <table>
                    <tr><td>Payment #:</td><td>@Model.DonationRow.VendorTxCode</td></tr>
                    <tr><td>Payment status:</td><td>Success</td></tr>
                    <tr><td>Date:</td><td ng-bind="''|datePreviewFormat">@Model.DonationRow.Timestamp</td></tr>
                    <tr><td>Total amount:</td><td ng-bind="@Model.DonationRow.Amount|mCurrency:'£'"></td></tr>
                </table>

                <hr class="margin-top-large margin-bottom-large"/>

                <a href="@Model.PartyHost.PartyUrl" class="btn-primary float-right" m-radius-picker="small medium">Go to the party page ></a>

            </div>

        </div>


        <div class="wgrid-side parent">

            <div class="wgrid-full parent">

                <div class="boxx collapse" m-radius-picker="medium">

                    <div class="wgrid-full wgrid-no-bottom-margin">
                        <div class="grid-12 party-main-image side" style="background-image: url(@Model.PartyHost.PartyImage)"></div>
                    </div>


                    <div class="wgrid-full pad-large">

                        <div m-profile-image="{{ '@Model.PartyHost.ProfileImageUrl' }}" m-radius-picker="small"></div>
                        <div class="party-details">
                            <h3 class="top pad-right-3 margin-bottom-4 margin-mobile-bottom-0">@Model.PartyHost.PartyHeading</h3>

                            <div class="anti-image-shift-details body-small float-left margin-right-medium">
                                <span class="icon-icon_clock"></span>
                                <span ng-bind="'@Model.PartyHost.PartyDateTime'|datePreviewFormat"></span>
                            </div>
                            <div class="anti-image-shift-details body-small float-left">
                                <span class="icon-icon_fingerpost"></span>
                                <span ng-bind="'@Model.PartyHost.PartyAddress.Address1:~:@Model.PartyHost.PartyAddress.Address2:~:@Model.PartyHost.PartyAddress.TownCity:~:@Model.PartyHost.PartyAddress.Postcode'|addressJoiner:':~:'"></span>
                            </div>

                        </div>
                    </div>

                </div>

            </div>

            <div class="wgrid-full">

                <div class="boxx radius-v1-small">

                    <m-totaliser m-raised="@Model.PartyHost.AmountRaised" m-total="@Model.PartyHost.FundraisingTarget"></m-totaliser>

                </div>

            </div>

        </div>

    </div>

</div>

