@inherits UmbracoViewPage<PistePoints>
@{
    Layout = "SitePage.cshtml";
}
<h1>Piste Points</h1>


@foreach(Reward reward in Model.Rewards)
{
    <h1>@reward.Heading</h1>
    <img src="@reward.Image.GetResponsiveImageUrl(10,10)"/>
    <h2>@reward.SubHeading</h2>    
    <p>@reward.Copy</p>
}

<a href="@Model.SiteSettings.RegisterHostUrl">@Model.RegisterHostLinkText</a>

@Html.Partial("PartyKit", Model.PartyKit)