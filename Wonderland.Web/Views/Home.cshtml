@inherits UmbracoViewPage<Home>
@{
  Layout = "SitePage.cshtml";
}
<div class="container">
  <section id="heroGraphic">
    <img src="img/hero-ph.jpg" />        
  </section>
  <section id="homeBanner">
    <img src="img/home-banner-ph.png" />

    @Model.BannerHeading

    @Model.BannerCopy

    <ul>
        @foreach (PromotionTile promotionTile in Model.PromotionTiles)
        {
            <li>@promotionTile.Name</li>            
            <li>@promotionTile.TileImageUrl</li>            
            <li>@promotionTile.OverlayImageUrl</li>
        }
    </ul>

         
</section>
<section id="promoLinks">
@for( var i = 0; i < 6; i++ ) {
  <img src="img/home-tile-ph.png">
}
</section>