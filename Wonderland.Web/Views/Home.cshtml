@inherits UmbracoViewPage<Home>
@{
  Layout = "SitePage.cshtml";
}
<div class="container">
  <section id="heroGraphic">
    <img src="img/hero-ph.jpg" />        
  </section>
  <section id="homeBanner">
    <img src="img/home-banner-ph.png" />

    @Model.BannerHeading

    @Model.BannerCopy

  </section>
<section id="promoTiles">
  <ul>
      @foreach (PromotionTile promotionTile in Model.PromotionTiles)
      {
        <li>
          @promotionTile.AltText
          <img src="@promotionTile.Image.GetResponsiveCropUrl("Square")" />
          <img src="@promotionTile.OverlayImage.Url" />        
        </li>            
      }
  </ul>
</section>