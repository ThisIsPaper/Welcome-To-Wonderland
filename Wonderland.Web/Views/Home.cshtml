@inherits UmbracoViewPage<Home>
@{
    Layout = "SitePage.cshtml";
}
<section id="heroGraphic">
    <img src="img/home-hero-copy.png" alt="Welcome to Wonderland" class="hero-title">
    <div class="actions">
        <a href="@Model.SiteSettings.RegisterHostUrl" class="btn-primary">Host a party ></a>       
    </div>
</section>
<div id="homeBg">
    <div class="container">
        <section class="banner row">
            <div class="banner-info eight-col">
              <h1> @Model.BannerHeading </h1>
              <p> @Model.BannerCopy </p>
            </div>
            <div class="money-raised-info four-col">
                <div class="six-col"></div>
                <div class="six-col"></div>
            </div>
        </section>
        <section id="promoTiles">
            <ul class="promo-tiles">
            @foreach (PromotionTile promotionTile in Model.PromotionTiles)
            {
                <li class="frame">
                    <img src="@promotionTile.Image.GetResponsiveCropUrl("Square")" alt="@promotionTile.AltText" />
                    <img src="@promotionTile.OverlayImage.Url" />        
                </li>            
            }
            </ul>
        </section>
        <section id="shareWonderland">
            <div class="share-wonderland-heading">
              
            </div>
        </section>
        <section id="twitterFeed">
            
        </section>
      </div>
</div>