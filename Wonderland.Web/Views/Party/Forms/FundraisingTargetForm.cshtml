@model FundraisingTargetForm

<div ng-init="fundraisingTargetDataInit(@Html.Raw(Json.Encode(Model)))"></div>


<script type="text/ng-template" id="partials/fundraisingTargetForm.html">



    <div class="clearfix" ng-init="processing=false;">
        @using (Html.BeginUmbracoForm<PartySurfaceController>("HandleFundraisingTargetForm", FormMethod.Post, new { m_serialized="", m_post_on_submit="fundraisingTargetData", m_on_success_event="fundraisingTargetDataUpdated", @name="targetForm", ng_submit="processing=true" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-holder">

                <h4>Set your Wonderland fundraising target</h4>
                <p class="form-info">Set your target to let your guests know how much you are trying to raise for Macmillan.</p>

                <h4>Choose your target</h4>
                <label class="dis-inline-block margin-right-small"><input class="margin-right-small" type="radio" name="selectar" ng-click="showChoose=false" ng-model="fundraisingTargetData.FundraisingTarget" value="180" ng-readonly="processing" />£180</label>
                <label class="dis-inline-block margin-right-small"><input class="margin-right-small" type="radio" name="selectar" ng-click="showChoose=false" ng-model="fundraisingTargetData.FundraisingTarget" value="250" ng-readonly="processing" />£250</label>
                <label class="dis-inline-block margin-right-small"><input class="margin-right-small" type="radio" name="selectar" ng-click="showChoose=false" ng-model="fundraisingTargetData.FundraisingTarget" value="400" ng-readonly="processing" />£400</label>
                <label class="dis-inline-block "><input type="checkbox" name="chooser" ng-model="showChoose" ng-readonly="processing" />I'll choose</label>

                <div class="pos-relative width-50p margin-top-medium" ng-show="showChoose">
                    <span class="form-field-ico">£</span>
                    <input class="currency" type="text" ng-model="fundraisingTargetData.FundraisingTarget" m-valid-number m-radius-picker="small" ng-readonly="processing" />
                </div>
                <div class="clear"></div>

                <hr/>

                <h4>Aim for piste points</h4>
                @* TODO: remove hardcoded url *@
                <p>Reaching Wonderland <a class="body-highlight" href="/piste-points/">piste points</a> means prizes! The more your raise, the bigger the prize and every penny you raise will go to help the 2 million people living with cancer in the UK and help them to take back control and live their lives to the fullest.</p>

                <div class="grid-4 grid-tablet-6 grid-mobile-12 pad-small text-align-center" ng-repeat="fund in hardcodedFundraisingTargets">
                    <img ng-src="{{ fund.imageUrl }}" width="100%" alt="" m-radius-picker="small" />
                    <div class="form-info body-emphasize" ng-bind="fund.title"></div>
                    <div class="form-info" ng-bind="fund.info"></div>
                </div>

                <div class="clear margin-bottom-large"></div>


                <input type="hidden" name="FundraisingTarget" ng-value="fundraisingTargetData.FundraisingTarget" />

                <div class="grid-12 parent">
                    <button type="submit" class="btn-primary float-right width-mobile-100p" ng-disabled="!fundraisingTargetData.FundraisingTarget || processing" m-radius-picker="small medium">Save changes</button>
                    <span ng-click="closePageModal()" class="cancel margin-right-1 float-right">Cancel</span>
                    <div ng-click="closePageModal()" class="modal-close"></div>
                    <div class="loader pos-mobile-static float-mobile-left" ng-show="processing"></div>
                </div>

            </div>
        }
    </div>
</script>